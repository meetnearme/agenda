<header class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between">
      {# Logo #}
      <a href="/" class="flex items-center gap-2">
        <span class="text-2xl font-bold tracking-tight text-foreground">
          {{ siteSettings.sitename or 'Local Agenda' }}
        </span>
      </a>

      {# Desktop Navigation #}
      <nav class="hidden items-center gap-6 md:flex">
        {% if homeContent.navigation %}
          {% for item in homeContent.navigation %}
            <a
              href="{{ item.slug }}"
              class="text-sm font-medium text-muted-foreground transition-colors hover:text-foreground"
            >
              {{ item.title }}
            </a>
          {% endfor %}
        {% endif %}
      </nav>

      {# Subscribe Button (Desktop) #}
      <div class="hidden md:block">
        {% set subscribeUrl = siteSettings.newsletter.subscribeUrl if siteSettings.newsletter else '' %}
        {% if subscribeUrl %}
          <a
            href="{{ subscribeUrl }}"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex h-9 items-center justify-center rounded-md bg-primary px-4 text-sm font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
          >
            Subscribe
          </a>
        {% else %}
          <button
            onclick="document.getElementById('newsletter-signup')?.scrollIntoView({ behavior: 'smooth' })"
            class="inline-flex h-9 items-center justify-center rounded-md bg-primary px-4 text-sm font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
          >
            Subscribe
          </button>
        {% endif %}
      </div>

      {# Mobile Menu Button #}
      <button
        id="mobile-menu-button"
        class="md:hidden"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg id="menu-icon-open" class="h-6 w-6 text-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-icon-close" class="h-6 w-6 text-foreground hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    {# Mobile Navigation #}
    <nav id="mobile-menu" class="hidden border-t border-border pb-4 pt-4 md:hidden">
      <div class="flex flex-col gap-4">
        {% if homeContent.navigation %}
          {% for item in homeContent.navigation %}
            <a
              href="{{ item.slug }}"
              class="text-sm font-medium text-muted-foreground transition-colors hover:text-foreground"
            >
              {{ item.title }}
            </a>
          {% endfor %}
        {% endif %}
        {% set subscribeUrl = siteSettings.newsletter.subscribeUrl if siteSettings.newsletter else '' %}
        {% if subscribeUrl %}
          <a
            href="{{ subscribeUrl }}"
            target="_blank"
            rel="noopener noreferrer"
            class="mt-2 inline-flex h-9 items-center justify-center rounded-md bg-primary px-4 text-sm font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
          >
            Subscribe
          </a>
        {% else %}
          <button
            onclick="document.getElementById('newsletter-signup')?.scrollIntoView({ behavior: 'smooth' })"
            class="mt-2 inline-flex h-9 items-center justify-center rounded-md bg-primary px-4 text-sm font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
          >
            Subscribe
          </button>
        {% endif %}
      </div>
    </nav>
  </div>
</header>
