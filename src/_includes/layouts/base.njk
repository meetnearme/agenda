<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# Page title #}
  <title>{% if title %}{{ title }} | {% endif %}{{ siteSettings.sitename or 'Local Agenda' }}</title>

  {# Meta description #}
  <meta name="description" content="{{ description or siteSettings.description or 'Discover the best events in your city' }}">

  {# Open Graph tags #}
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ siteSettings.sitename or 'Local Agenda' }}">
  <meta property="og:description" content="{{ description or siteSettings.description or 'Discover the best events in your city' }}">
  <meta property="og:type" content="website">
  {% if featuredimage %}
  <meta property="og:image" content="{{ featuredimage }}">
  {% endif %}

  {# Twitter Card tags #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ siteSettings.sitename or 'Local Agenda' }}">
  <meta name="twitter:description" content="{{ description or siteSettings.description or 'Discover the best events in your city' }}">
  {% if featuredimage %}
  <meta name="twitter:image" content="{{ featuredimage }}">
  {% endif %}

  {# Favicon #}
  <link rel="icon" href="/favicon.ico">

  {# CSS #}
  <link rel="stylesheet" href="/css/main.css">

  {# Brand color CSS variables (converted from hex to OKLCH) #}
  {% if siteSettings.brandcolor %}
  <style>
    :root {
      --primary: {{ siteSettings.brandcolor }};
      --accent: {{ siteSettings.brandcolor }};
      --ring: {{ siteSettings.brandcolor }};
      --sidebar-primary: {{ siteSettings.brandcolor }};
      --sidebar-ring: {{ siteSettings.brandcolor }};
      --chart-1: {{ siteSettings.brandcolor }};
    }
  </style>
  {% endif %}
</head>
<body class="bg-background text-foreground min-h-screen">

  {# Header #}
  {% include "components/header.njk" %}

  {# Main content #}
  <main class="min-h-screen">
    {{ content | safe }}
  </main>

  {# Footer #}
  {% include "components/footer.njk" %}

  {# Client-side JavaScript #}
  <script src="/js/main.js" defer></script>

  {# Beehiiv embed script - load once if iframe mode is enabled with Beehiiv embed #}
  {% if siteSettings.newsletter.mode == 'iframe' and siteSettings.newsletter.embedCode and 'beehiiv' in siteSettings.newsletter.embedCode %}
  <script async src="https://subscribe-forms.beehiiv.com/embed.js"></script>
  {% endif %}

</body>
</html>
