---
layout: base.njk
title: Updates
pagination:
  data: collections.posts
  size: 12
  alias: posts
permalink: /updates{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber + 1 }}{% endif %}/
---

<div class="bg-background min-h-screen px-4 py-16">
  <div class="container mx-auto max-w-6xl">
    {# Page Header #}
    <div class="mb-12">
      <h1 class="text-foreground mb-4 text-4xl font-bold md:text-5xl">
        UPDATES
      </h1>
      <p class="text-muted-foreground text-xl">
        Stay informed with our latest news and event highlights
      </p>
    </div>

    {# Posts Grid #}
    {% if posts.length > 0 %}
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {% for post in posts %}
          <a href="{{ post.url }}" class="group block">
            <article class="border-border bg-card hover:border-primary/50 overflow-hidden rounded-lg border transition-colors">
              {# Featured Image #}
              {% if post.data.featuredimage %}
                {% set imagePath = '/' + env.CONTENT_DIR + '/updates/' + post.imageBasePath + '/' + post.data.featuredimage %}
                <div class="relative aspect-video overflow-hidden">
                  <img
                    src="{{ imagePath }}"
                    alt="{{ post.data.title }}"
                    class="h-full w-full object-cover transition-transform group-hover:scale-105"
                  />
                </div>
              {% else %}
                <div class="bg-muted relative aspect-video flex items-center justify-center">
                  <span class="text-muted-foreground">No image</span>
                </div>
              {% endif %}

              {# Post Content #}
              <div class="p-6">
                <div class="text-primary mb-2 text-sm font-semibold">
                  {{ post.data.date | formatDate }}
                </div>
                <h2 class="text-card-foreground group-hover:text-primary mb-2 text-xl font-bold transition-colors">
                  {{ post.data.title }}
                </h2>
                <p class="text-muted-foreground text-sm">
                  {{ post.data.description or post.excerpt }}
                </p>
                {% if post.readingTime %}
                  <div class="text-muted-foreground mt-4 text-xs">
                    {{ post.readingTime }} min read
                  </div>
                {% endif %}
              </div>
            </article>
          </a>
        {% endfor %}
      </div>

      {# Pagination #}
      {% if pagination.pages.length > 1 %}
        <nav class="mt-12 flex items-center justify-center gap-2" aria-label="Pagination">
          {% if pagination.previousPageHref %}
            <a
              href="{{ pagination.previousPageHref }}"
              class="inline-flex h-10 items-center justify-center rounded-md border border-border bg-background px-4 py-2 text-sm font-medium text-foreground transition-colors hover:bg-accent hover:text-accent-foreground"
            >
              Previous
            </a>
          {% endif %}

          {% for pageNumber in range(0, pagination.pages.length) %}
            {% if pageNumber === pagination.pageNumber %}
              <span class="inline-flex h-10 items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground">
                {{ pageNumber + 1 }}
              </span>
            {% else %}
              <a
                href="{{ pagination.hrefs[pageNumber] }}"
                class="inline-flex h-10 items-center justify-center rounded-md border border-border bg-background px-4 py-2 text-sm font-medium text-foreground transition-colors hover:bg-accent hover:text-accent-foreground"
              >
                {{ pageNumber + 1 }}
              </a>
            {% endif %}
          {% endfor %}

          {% if pagination.nextPageHref %}
            <a
              href="{{ pagination.nextPageHref }}"
              class="inline-flex h-10 items-center justify-center rounded-md border border-border bg-background px-4 py-2 text-sm font-medium text-foreground transition-colors hover:bg-accent hover:text-accent-foreground"
            >
              Next
            </a>
          {% endif %}
        </nav>
      {% endif %}
    {% else %}
      {# Empty State #}
      <div class="border-border bg-card rounded-lg border p-12 text-center">
        <svg class="text-muted-foreground mx-auto mb-4 h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <h3 class="text-foreground mb-2 text-xl font-semibold">No Updates Yet</h3>
        <p class="text-muted-foreground">
          Check back soon for news and event highlights.
        </p>
      </div>
    {% endif %}
  </div>
</div>
