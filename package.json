{
    "name": "local-agenda",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "setup": "node scripts/setup.js",
        "setup:config": "node scripts/setup.js --config",
        "setup:dev": "node scripts/setup-dev.js",
        "setup:remove-template": "node scripts/setup.js --remove-template-only",
        "dev": "dotenv -e .env.local -e .env -- npm-run-all --parallel watch:css dev:eleventy",
        "dev:eleventy": "dotenv -e .env.local -e .env -- eleventy --serve --port=3000",
        "dev:cms": "decap-server",
        "dev:all": "pnpm run setup:dev && npm-run-all --parallel dev:cms dev",
        "build": "npm run build:css && dotenv -e .env.local -e .env -- eleventy",
        "build:css": "npx @tailwindcss/cli -i ./src/css/main.css -o ./_site/css/main.css --minify",
        "watch:css": "npx @tailwindcss/cli -i ./src/css/main.css -o ./_site/css/main.css --watch",
        "build:dev": "CONTENT_DIR=config/atx-agenda-content pnpm build",
        "build:ci": "chmod +x scripts/build.sh && ./scripts/build.sh",
        "build:atx-agenda": "SITE_CONFIG=atx-agenda pnpm build:ci",
        "build:marketing": "SITE_CONFIG=marketing pnpm build:ci",
        "build:fork": "pnpm build:ci",
        "start": "eleventy --serve",
        "lint": "echo 'Linting not configured for 11ty yet'"
    },
    "dependencies": {
        "@beehiiv/sdk": "^0.1.9",
        "@hookform/resolvers": "^5.2.1",
        "@radix-ui/react-collapsible": "^1.1.12",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-navigation-menu": "^1.2.14",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "decap-cms-app": "^3.8.3",
        "js-yaml": "^4.1.0",
        "lucide-react": "^0.541.0",
        "next": "16.0.7",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-hook-form": "^7.62.0",
        "rehype-react": "^8.0.0",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "tailwind-merge": "^3.3.1",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@11ty/eleventy-img": "^6.0.4",
        "@eslint/eslintrc": "^3",
        "@netlify/functions": "^5.1.2",
        "@tailwindcss/cli": "^4.1.18",
        "@tailwindcss/postcss": "^4",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "alpinejs": "^3.15.4",
        "daisyui": "^5.5.14",
        "decap-server": "^3.3.1",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9",
        "eslint-config-next": "15.4.6",
        "gray-matter": "^4.0.3",
        "markdown-it": "^14.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.3.7",
        "typescript": "^5"
    }
}
